---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Analytics from "@vercel/analytics/astro";
import ThemeButton from "../components/ThemeButton.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<title>{title}</title>
		<script is:inline>
			// Prevent theme flash by applying theme immediately
			(function () {
				const savedTheme = localStorage.getItem("theme");
				const html = document.documentElement;

				// Default to dark theme if no preference is saved
				if (savedTheme === "dark" || (!savedTheme && true)) {
					html.classList.add("dark");
				} else {
					html.classList.remove("dark");
				}
			})();
		</script>
	</head>
	<body
		class="relative bg-primary-light text-primary-dark dark:bg-primary-dark dark:text-primary-light font-inter transition-all duration-75"
	>
		<Header />
		<ThemeButton />
		<div class="relative overflow-hidden">
			<main>
				<slot />
			</main>
			<Footer />
		</div>
		<Analytics />

		<script>
			import "../assets/app.ts";
		</script>
	</body>
</html>

<style>
	@import url("https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap");
	html,
	body {
		font-family: "Inter", sans-serif;
		font-size: 16px;
		margin: 0;
		width: 100%;
		height: auto;
	}
	html {
		background-color: inherit;
	}
</style>
