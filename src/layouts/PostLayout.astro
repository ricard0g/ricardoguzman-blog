---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Analytics from "@vercel/analytics/astro";
import ThemeButton from "../components/ThemeButton.astro";
import SocialMeta from "../components/SocialMeta.astro";

interface PostFrontmatter {
	title: string;
	description: string;
	ogDescription?: string;
	twitterDescription?: string;
	image?: string;
	imageAlt?: string;
	pubDate: Date;
	updateDate?: Date;
	tags: string[];
	author: string;
	pubDateString: string;
}

const { frontmatter } = Astro.props as { frontmatter: PostFrontmatter };

const publishedTime = new Date(frontmatter.pubDate).toISOString();
const modifiedTime = frontmatter.updateDate
	? new Date(frontmatter.updateDate).toISOString()
	: undefined;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<SocialMeta
			title={frontmatter.title}
			description={frontmatter.description}
			ogDescription={frontmatter.ogDescription}
			twitterDescription={frontmatter.twitterDescription}
			image={frontmatter.image}
			imageAlt={frontmatter.imageAlt}
			type="article"
			publishedTime={publishedTime}
			modifiedTime={modifiedTime}
			author={frontmatter.author}
			tags={frontmatter.tags}
		/>
		<link rel="sitemap" href="/sitemap-index.xml" />
		<title>{frontmatter.title}</title>
		<script is:inline>
			// Prevent theme flash by applying theme immediately
			(function () {
				const savedTheme = localStorage.getItem("theme");
				const html = document.documentElement;

				// Default to dark theme if no preference is saved
				if (savedTheme === "dark" || (!savedTheme && true)) {
					html.classList.add("dark");
				} else {
					html.classList.remove("dark");
				}
			})();
		</script>
	</head>
	<body
		class="relative grid bg-primary-light text-primary-dark dark:bg-primary-dark dark:text-primary-light font-inter transition-all duration-75"
	>
		<Header />
		<ThemeButton />
		<div class="relative overflow-hidden">
			<main
				class="flex flex-col items-start justify-center w-[90%] md:w-[35%] m-auto mt-[100px] md:mt-[150px] mb-[100px] min-h-dvh text-left text-primary-dark dark:text-primary-light pretty"
			>
				<button
					onclick="window.history.back()"
					class="text-sm md:text-base my-4 hover:underline cursor-pointer"
					>‚Üê back</button
				>
				{
					frontmatter.image && (
						<figure class="w-full h-36 md:h-52 mb-5 rounded-lg overflow-hidden">
							<img
								src={frontmatter.image}
								loading="eager"
								alt="Image from {frontmatter.title}"
								class="w-full h-auto"
							/>
						</figure>
					)
				}
				<h1
					class="gradient-heading text-left text-xl md:text-3xl mb-5 bg-gradient-to-r from-[#444] to-primary-dark-text dark:from-primary-dark-text dark:to-[#444] bg-clip-text text-transparent transition-all duration-76 leading-snug"
				>
					{frontmatter.title}
				</h1>
				<p
					class="text-sm! text-left! w-full opacity-70 text-[var(--color-primary-light-text)] dark:text-[var(--color-primary-dark-text)] whitespace-nowrap"
				>
					{frontmatter.pubDateString} - by {frontmatter.author}
				</p>

				<div class="flex flex-wrap gap-2 mb-6">
					{
						frontmatter.tags.map((tag: string) => (
							<span class="badge rounded-full px-3 py-1 text-xs font-medium backdrop-blur-sm border border-[var(--color-primary-light-border)] dark:border-[var(--color-primary-dark-border)] bg-[rgba(0,0,0,0.05)] dark:bg-[rgba(255,255,255,0.07)] text-[var(--color-primary-dark)] dark:text-[var(--color-primary-light)] shadow-sm">
								{tag}
							</span>
						))
					}
				</div>
				<div
					class="w-full h-[1px] bg-primary-dark-text dark:bg-primary-dark-border mb-5"
				>
				</div>
				<slot />
			</main>
			<Footer />
		</div>
		<Analytics />
		<script>
			import "../assets/app.ts";
		</script>
	</body>
</html>

<style>
	@import url("https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap");
	html,
	body {
		font-family: "Inter", sans-serif;
		font-size: 16px;
		margin: 0;
		width: 100%;
		height: auto;
	}
	html {
		background-color: inherit;
	}
</style>
